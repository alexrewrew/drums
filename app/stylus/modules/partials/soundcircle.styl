.sound-circle
  background $back-black3
  border-radius 50%
  width 584px
  height 584px
  margin 75px auto 103px
  text-align center
  position relative
  +mobile()
    width 290px
    height 290px
    margin 35px auto 60px
  &--sound
    position absolute
    left 32px
    top calc(50% - 5px)
    width 22px
    height 22px
    cursor pointer
    &:hover
      svg
        g
          fill $orange
    +mobile()
      display none
  &--play
    position absolute
    right 32px
    top calc(50% - 5px)
    width 22px
    height 22px
    cursor pointer
    &:hover
      svg
        g
          fill $orange
    +mobile()
      display none
  &--drum
    position absolute
    top calc(50% - 211px)
    left calc(50% - 209px)
    display block
    +mobile()
      width 220px
      height 220px
      top calc(50% - 110px)
      left calc(50% - 110px)
  &--mask
    position absolute
    width 418px
    height 422px
    top calc(50% - 211px)
    left calc(50% - 209px)
    +mobile()
      display none
    &--note
      position absolute
      //width 115px
      //height 104px
      cursor pointer
      opacity 0
      transitions()
      &:hover
        opacity 1
      img
        height: 100%
    &--note.note-1
      top: 44px;
      left: 179px;
    &--note.note-2
      top: 124px;
      right: 39px;
    &--note.note-3
      bottom: 72px;
      right: 90px;
    &--note.note-4
      bottom: 63px;
      left: 84px;
    &--note.note-5
      top: 126px;
      left: 43px;
    &--note.note-6
      top: 35px;
      right: 73px;
    &--note.note-7
      bottom: 132px;
      right: 3px;
    &--note.note-8
      bottom: 17px;
      right: 179px;
    &--note.note-9
      bottom: 127px;
      left: 7px;
    &--note.note-10
      top: 31px;
      left: 73px;

.visible-block
  display block

.hidden-block
  display none