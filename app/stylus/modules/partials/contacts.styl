.contacts
  p
    font-size 1.125em
  a
    text-decoration underline
    display inline-block
    margin-left 5px
    +mobile()
      margin-left 0
      display block
  .social-links
    justify-content flex-start
    +mobile()
      margin-bottom 30px
    li
      margin-left 0
      margin-right 45px
      a
        color $white
        &:hover
          color $text-orange
