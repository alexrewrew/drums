@import '../../utilities/vars'
@import '../../utilities/mixins'

/* HEADERS */

h1
  font-weight 500
  font-size: 2.5em
  letter-spacing: 20px;
  color: $text-gray3
  text-align center
  position relative
  padding-bottom 17px
  margin-bottom 20px
  +mobile()
    font-size 1.5em
    letter-spacing 10px
  &:after
    pseudo(block, absolute)
    width 70px
    height 2px
    background $orange
    bottom 0
    left calc(50% - 35px)
h2
  font-size 1.875em
  font-weight 600
  text-align center
  color $text-black
  position relative
  padding-bottom 20px
  margin-bottom 18px
  text-transform uppercase
  &:after
    pseudo(block, absolute)
    width 70px
    height 2px
    background $orange
    bottom 0
    left calc(50% - 35px)

h2.white
  color $white

h3
  font-size: 1.563em
  color: $white;
  font-weight 500
  margin-bottom 24px
h4
  font-size 1.250em
  color $white
  font-weight 500
  margin-bottom 24px
h5
  line-height: 1.33;
  color $white
  font-size 1.125em
  font-weight 300
  margin-bottom 0
h6 {}

/* PARAGRAPH */
p
  font(1em, $white, 100, 1.44)
  margin-bottom 12px

.text-center
  text-align center