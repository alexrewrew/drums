@import '../../utilities/vars'
@import '../../utilities/mixins'

/* HEADERS */

h1
  font-weight 500
  font-size: 2.5em
  letter-spacing: 20px;
  color: $text-gray3
  text-align center
  position relative
  padding-bottom 17px
  margin-bottom 20px
  +mobile()
    font-size 1.5em
    letter-spacing 10px
  &:after
    pseudo(block, absolute)
    width 70px
    height 2px
    background $orange
    bottom 0
    left calc(50% - 35px)
h2
  font-size 1.875em
  font-weight 600
  text-align center
  color $text-black
  position relative
  padding-bottom 20px
  margin-bottom 18px
  text-transform uppercase
  &:after
    pseudo(block, absolute)
    width 70px
    height 2px
    background $orange
    bottom 0
    left calc(50% - 35px)

h2.white
  color $white

h3
  font-size: 1.563em
  color: $white;
  font-weight 500
  margin-bottom 24px
h4
  font-size 1.250em
  color $white
  font-weight 500
  margin-bottom 24px
h5
  line-height: 1.33;
  color $white
  font-size 1.125em
  font-weight 300
  margin-bottom 0

//new
h6
  font-size 1.375em
  color $text-gray3
  font-weight 600

/* PARAGRAPH */
p
  font(1em, $white, 100, 1.44)
  margin-bottom 12px

.text-center
  text-align center

.text-left
  text-align left

blockquote
  color $white
  line-height: 1.44;
  font-size 1.125em
  position relative
  min-height 112px
  padding 0 13%
  +mobile()
    margin-bottom 80px
  &:before
    display block
    position absolute
    content '\201c'
    font-size 6em
    color $text-orange
    top -40px
    left 0
    line-height normal
  &:after
    display block
    position absolute
    content '\201d'
    font-size 6em
    color $text-orange
    bottom -40px
    right 0
    line-height normal
    +mobile()
      bottom: -90px;

