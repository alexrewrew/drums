@import "../../utilities/vars"
@import "../../utilities/mixins"

/* FOOTER */
footer
  background $back-black2
  padding-top 75px
  padding-bottom 42px
  +mobile()
    padding-top 45px
  h3
    font-size 1.25em
    letter-spacing 2.5px
    margin-bottom 25px
    +mobile()
      margin-top 30px
  p
    line-height normal
    font-size 1.125em
    +mobile()
      line-height 1.57

.links-contacts
  padding 0
  margin 0
  li
    list-style none
    margin-bottom 5px
    a
      line-height 1.2
      color $text-orange
      font-size 1.25em
.social-links
  display flex
  flex-direction row
  flex-wrap: wrap
  justify-content center
  margin 0
  padding 0
  li
    list-style none
    margin 20px 25px
    a
      font-size 1.375em


