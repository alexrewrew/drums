.pagination-nav
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content center
  padding 0
  li
    list-style none
    margin 0 30px
    a
      font-size 1.25em
      line-height: 1.2;
      letter-spacing: 2.5px;
      color: $text-orange;
      &:hover
        color $back-black
      .fa
        font-size 25px
    a.active
      color $back-black