.remodal
  background $back-black2
  width 100%
  max-width 1170px
  padding 70px 0 50px
  +tablet()
    max-width 960px
  +portrait()
    max-width 720px
  form
    margin-bottom 0
  .remodal-close
    right 30px
    top 30px
    left auto
    color $white
    &:before
      font-size 60px
    &:hover
      color $text-orange
  //new
  .sound-circle--colors
    display flex
    flex-direction row
    flex-wrap nowrap
    padding 0
    margin 0 0 15px
    li
      list-style none
      margin-right 9px
      img
        border 2px solid transparent
        border-radius 50%
        transitions()
        cursor pointer
        &:hover
          border-color $white

.hidden
  display none